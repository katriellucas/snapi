---
import IconButton from './IconButton.astro';

export interface Props {
	href: string;
}

const { href } = Astro.props;
---

<form class="close-button" method="dialog">
	<IconButton primary icon="tabler:x" {href} />
</form>
<dialog>
	<div class="wrapper">
		<slot />
	</div>
</dialog>

<style>
	dialog {
		align-items: center;
		background: var(--bg-blurred); /* Semi-transparent */
		backdrop-filter: blur(16px); /* Apply blur effect */
		display: flex;
		height: 100%;
		justify-content: center;
		left: 0;
		position: fixed;
		top: 0;
		width: 100%;
		z-index: 999;
	}

	.wrapper {
		align-items: center;
		width: calc(100% - 32px);
		display: flex;
		height: calc(100% - 32px);
		justify-content: center;
	}

	.close-button {
		position: fixed;
		top: 4px;
		right: 4px;
		z-index: 1000;
	}
</style>
