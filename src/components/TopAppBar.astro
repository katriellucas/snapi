<header class="top-app-bar no-js">
	<slot />
</header>

<style>
	.top-app-bar {
		align-items: center;
		background: var(--bg-blurred);
		backdrop-filter: blur(8px);
		border-bottom: solid 1px var(--outline); /* !!! change when done; */
		display: flex;
		font: var(--title-large);
		grid-area: header;
		justify-content: space-between;
		min-height: 64px;
		padding: 0 4px;
		position: sticky;
		top: 0;
		transition: background 0.2s;
		z-index: 1;
	}
</style>

<noscript>
	<style>
		.no-js {
			border-bottom: solid 1px #444; /* !!! change when done; */
		}
	</style>
</noscript>
