---
import type { ImageMetadata } from 'astro';
import { getImage } from 'astro:assets';

interface Props {
	src: string | ImageMetadata;
	alt: string;
}

const { src, alt } = Astro.props;
---

<style>
	.picture-container {
		width: 100%;
		max-width: 640px;
		min-width: 400px;
	}
</style>

<div class="picture-container">
	<picture>
		<!-- Source for small screens -->
		<source media="(max-width: 640px)" srcset="image-small.webp" type="image/webp" />
		<source media="(max-width: 640px)" srcset="image-small.avif" type="image/avif" />

		<!-- Source for larger screens -->
		<source srcset="image-large.webp" type="image/webp" />
		<source srcset="image-large.avif" type="image/avif" />

		<!-- Default source -->
		<img src="image-large.jpg" alt="Description of the image" />
	</picture>
</div>
