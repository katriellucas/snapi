---
interface Props {
	href?: string;
	target?: '_blank' | '_self' | '_parent' | '_top';
	type?: 'button' | 'reset' | 'submit';
	wide?: boolean;
	primary?: boolean;
}

const { href, wide, primary, ...props } = Astro.props;

const El = href ? 'a' : 'button';
---

<El class:list={['common-button target', { wide, primary }]} {...props} {href}>
	<span class="container ripple {visual}">
		<slot />
	</span>
</El>

<style>
	.common-button {
		align-items: center;
		cursor: pointer;
		display: flex;
		height: 48px;
		justify-content: center;
	}

	.container {
		align-items: center;
		background: var(--accent);
		border-radius: 8px;
		color: var(--on-accent);
		display: flex;
		font: var(--title-medium);

		height: 40px;
		justify-content: center;
		padding: 0 24px;
		width: 100%;
	}

	.primary {
		background: var(--accent);
		color: var(--on-accent);
	}

	.wide {
		width: 100%;
	}
</style>
