---
import { Icon } from 'astro-icon/components';

interface Props {
	href?: string;
	icon: string;
	iconAttr?: object;
}

const { href, icon, iconAttr, ...props } = Astro.props;
---

<a class="fab target ripple" {href} {...props}>
	<Icon name={icon} {...iconAttr} width={24} height={24} />
</a>

