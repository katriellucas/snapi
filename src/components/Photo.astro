---
import type { ImageMetadata } from 'astro';
import { Picture } from 'astro:assets';

interface Props {
	img: ImageMetadata;
}

const { img } = Astro.props;
---

<Picture class="photo" src={img} alt="alt" formats={['avif', 'webp']} widths={[img.width]} />

<style>
	.photo {
		width: 100%;
		height: auto;
		display: block;
		border-radius: 8px;

		/* object-fit: cover;
		width: 100%;
		aspect-ratio: 1 / 1; */
	}
</style>
