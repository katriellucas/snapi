---
import TopAppBar from '@components/TopAppBar.astro';
import Root from './__Root.astro';
import IconButton from '@components/IconButton.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Root {title}>
	<div id="app">
		<TopAppBar>
			<IconButton href="/settings" icon="tabler:settings-2" />
		</TopAppBar>

		<main>
			<slot />
		</main>

		<footer></footer>
	</div>
</Root>

<style>
	main {
		padding: 16px;
	}

	footer {
		border-top: solid 1px var(--outline-variant);
		height: 264px;
		padding: 16px;
	}
</style>
